@model IdleIronman.ViewModels.AllStatsViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Rules</h1>
    <p class="lead">Idle Iron Man rules summarized here</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    <table class="table">
        <tr>
            <th>
                Team Name and Photo
            </th>
            <th>
                Days Left
            </th>
            <th>
                Progress
            </th>
            <th>
                Members
            </th>
            <th>
                Links
            </th>
        </tr>
        @foreach (var item in Model.Teams)
        {
            <tr>
                <td>
                    @item.Name<br/>
                    <img src="~/Content/Images/@item.LinkToPhoto" />
                </td>
                <td>
                   Days Left
                </td>
                <td>
                    Progress
                </td>
                <td>
                    Members
                </td>
                <td>
                    Links
                </td>
            </tr>
        }
    </table>
</div>

