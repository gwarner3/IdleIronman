@model IdleIronman.ViewModels.TeamStatsListViewModel
@{
    ViewBag.Title = "DisplayStats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayStats</h2>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    Team ID
                </th>
                <th>
                    Name
                </th>
            </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.TeamStats)
                {
                    <tr>
                        <td>
                            @record.TeamId
                        </td>
                        <td>
                            @record.TeamName
                        </td>
                    </tr>
                }
            </tbody>
        </table>    
