@model IdleIronman.ViewModels.ParticpantStatsViewModel
@{
    ViewBag.Title = "Latest Stats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Participant Index</h2>

<p>Swam: @Model.ParticipantTotalSwimDistance.ToString("0.00") miles</p>

<p>Biked: @Model.ParticipantTotalBikedDistance miles</p>

<p>Ran: @Model.ParticipantTotalRunDistance miles</p>

<p>Days remaining: @Model.DaysUntilEnd </p>

<h3>Logged Exercises</h3>
<table class="table">
    <tr>
        <th>
            Date
        </th>
        <th>
            Exercise
        </th>
        <th>
            Distance
        </th>
        <th>
            Make Changes
        </th>
    </tr>
    @foreach (var log in Model.ActivityLogModels)
    {
        <tr>
            <td>
                @log.ActivityDate.ToShortDateString()
            </td>
            <td>
                @log.ExerciseTypeModels.Name

                @*@Model.ExerciseType.Where(e => e.Id == log.ExerciseTypeModelsId).Select(e => e.Name)

                @Model.ActivityLogModels.Where(e=>e.ExerciseTypeModelsId == log.ExerciseTypeModelsId).Select(e=>e.ExerciseTypeModels.Name);*@
               
                @*@log.ExerciseTypeModels.Name*@
            </td>
            <td>
                @log.Distance
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Participant", new {id = log.Id}, null) | 
                @Html.ActionLink("Delete", "Delete", "Participant", new {id = log.Id}, null)
            </td>
        </tr>
    }
</table>




  
