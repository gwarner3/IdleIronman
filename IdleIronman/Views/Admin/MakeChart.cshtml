@model IdleIronman.ViewModels.AdminChartViewModel

@*Admin make chart view*@

@{
    Layout = null;
}

@{
    var totalDistanceChart = new Chart(400, 200, ChartTheme.Vanilla)
        .AddTitle("Miles covered")
        //.AddLegend("Title", "Name")
        //.SetXAxis("Title", 0, 3) sets length of data going up
        //.SetYAxis(null, 0, 100) //sets length of data going across
        .AddSeries(
            name: "Distance covered",
            chartType: "bar",
            xValue: new[] { "Swam", "Biked", "Ran" },
            yValues: new[] { @Model.swam, @Model.biked, @Model.ran })
        .Write();

}
@DateTime.Today

